    <footer id="page-footer">
        <div class="container">
            <div class="footer-flex">
                <div class="footer-flex-item">
                    @*<p>
                            <a href="@Url.Action(nameof(SupportController.Sitemap), new
                                     {
                                         controller = "Support",
